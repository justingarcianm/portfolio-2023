model Project {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  title       String
  description String
  imageURL    String
  repoLink    String
  demoLink    String
  category    Category?
  skills      Skills[]
}

model Category {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  title       String
  project     Project   @relation(fields: [projectID], references: [id])
  projectID   Int       @unique
}

model Skills {
    id        Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  title       String
  project     Project   @relation(fields: [projectID], references: [id])
  projectID   Int
}